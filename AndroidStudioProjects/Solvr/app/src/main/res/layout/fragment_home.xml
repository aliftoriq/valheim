        <FrameLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="-10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_gradient_vertical"
            android:minHeight="100dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="43dp"
                    android:src="@drawable/solvr_landscape_white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Ajukan"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plaffon" />
            </LinearLayout>
        </FrameLayout>

        <!-- Simulation Section - Updated with styles from home page -->
        <LinearLayout
            android:id="@+id/simulationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:background="@drawable/bg_white_rounded"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simulasikan"
                android:textColor="@color/secondary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Updated Loan Amount Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLoanAmount"
                style="@style/SolvrInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Jumlah Pinjaman (Rp)"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/secondary" />

            <!-- Tenor Buttons -->
            <SeekBar
                android:id="@+id/seekLoanAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="100000000"
                android:progress="0"
                android:progressTint="@color/primary"
                android:thumbTint="@color/primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Pilih Tenor (bulan)"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Updated Tenor Buttons with MaterialButtonToggleGroup -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/tenorToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:selectionRequired="true"
                app:singleSelection="true"
                android:weightSum="4">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTenor3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:text="3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTenor6"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondary"
                    android:text="6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTenor9"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:text="9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTenor12"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondary"
                    android:text="12" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Calculate Button - Keeping original ID -->
            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:text="Kalkulasi"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/darker_gray" />

            <!-- Simulation Result Container - Keeping IDs from original -->
            <LinearLayout
                android:id="@+id/simulationResultContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_vertical_rd5"
                android:orientation="vertical">

                <!-- Calculation Results -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cicilan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Cicilan"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtCicilanBulanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IDR -,-"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_wallet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Total"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtTotalPembayaran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IDR - ,-"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_rate" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Bunga"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtBiayaBunga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IDR - ,-"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_admin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Admin"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtBiayaAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IDR - ,-"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Rate information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
